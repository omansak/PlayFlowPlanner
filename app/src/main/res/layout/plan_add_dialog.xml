<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_name"
            android:textStyle="bold|italic"/>

        <EditText
            android:id="@+id/dialog_planAdd_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textvew_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_explanation"
            android:textStyle="bold|italic"/>
        <EditText
            android:id="@+id/dialog_planAdd_explanation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/textvew_layout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_category"
            android:textStyle="bold|italic"/>
        <Spinner
            android:id="@+id/dialog_planAdd_spinner_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/dialog_planAdd_btn_cancel"
                android:layout_width="match_parent"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:background="@drawable/buttonshape"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/dialog_planAdd_btn_create"
                android:layout_width="match_parent"
                android:text="@string/create"
                android:layout_weight="1"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:background="@drawable/buttonshape"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>